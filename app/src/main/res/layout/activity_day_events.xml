<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mixer.telerikcalendartest.DayEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height"
        android:id="@+id/eventsForDay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height"
            android:text="Independencia de cartagena"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/linearListEvents"
        android:layout_below="@+id/eventsForDay"
        android:layout_above="@+id/extra_info">

        <ListView
            android:id="@+id/listEvents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="16dp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height"
        android:layout_alignParentBottom="true"
        android:id="@+id/extra_info">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height"
            android:text="Â¿Usted pregunta de donde viene el pescado que consume?"/>
    </LinearLayout>


</RelativeLayout>
